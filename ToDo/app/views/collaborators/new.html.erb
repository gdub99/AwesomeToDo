<h1>New Collaborator</h1>


<%= form_tag(collaborators_url, method: 'post') do %>


  <div>
    <%= label_tag :name %><br />
    <%= text_field_tag :name %>
  </div>

  <div>
    <%= label_tag :nickname %><br />
    <%= text_field_tag :nickname %>
  </div>

  <div>
    <%= label_tag :user_id %><br />
    <%= select_tag :user_id, options_from_collection_for_select(User.all, :id, :name) %>
  </div>


  <div>
    <%= submit_tag "Create Collaborator" %>
  </div>
<% end %>
